generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Pegawai {
  id_pegawai      String @id @default(cuid())
  nama            String
  tempat_lahir    String
  tanggal_lahir   String
  alamat          String
  rt              String
  rw              String
  kelurahan       String
  kecamatan       String
  kota            String
  provinsi        String
  no_telepon      String
  no_ktp          String @unique
  npwp            String @unique
  no_rekening     String
  bank_dki_cabang String
  pendidikan      String
  jenis_pekerjaan String

  cuti Cuti[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Cuti {
  id_cuti         String     @id @default(cuid())
  id_pegawai      String
  tanggal_mulai   DateTime
  tanggal_selesai DateTime
  alasan          String?
  status          CutiStatus @default(MENUNGGU)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Pegawai           Pegawai? @relation(fields: [id_pegawai], references: [id_pegawai])
}

enum CutiStatus {
  MENUNGGU
  DISETUJUI
  DITOLAK
}
