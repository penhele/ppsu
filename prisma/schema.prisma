generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     Role   @default(PEGAWAI)

  pegawai Pegawai?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Pegawai {
  id_pegawai      String         @id @default(cuid())
  nama            String
  tempat_lahir    String
  tanggal_lahir   DateTime
  alamat          String
  rt              String
  rw              String
  kelurahan       String
  kecamatan       String
  kota            String
  provinsi        String
  no_telepon      String
  no_ktp          String         @unique
  npwp            String         @unique
  no_rekening     String
  bank_dki_cabang String
  status          PegawaiStatus  @default(AKTIF)
  pendidikan      Pendidikan
  jenis_pekerjaan JenisPekerjaan

  cuti Cuti[]

  user_id String @unique
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Cuti {
  id_cuti         String     @id @default(cuid())
  tanggal_mulai   DateTime
  tanggal_selesai DateTime
  tipe_cuti       TipeCuti
  alasan          String?
  catatan         String?
  status          CutiStatus @default(MENUNGGU)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  id_pegawai String
  Pegawai    Pegawai? @relation(fields: [id_pegawai], references: [id_pegawai], onDelete: Cascade)
}

enum Pendidikan {
  SD
  SMP
  SMA
}

enum JenisPekerjaan {
  PETUGAS_PPSU
}

enum CutiStatus {
  MENUNGGU
  DISETUJUI
  DITOLAK
}

enum PegawaiStatus {
  AKTIF
  TIDAK_AKTIF
  CUTI
}

enum TipeCuti {
  SAKIT
  LIBURAN
  HAMIL
  KEDUKAAN
}

enum Role {
  ADMIN
  PEGAWAI
}
